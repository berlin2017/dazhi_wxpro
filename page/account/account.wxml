<!--page/account/account.wxml-->
<import src="../common/head.wxml" />

<view class="container">
  <template is="head" data="{{title: '个人信息'}}"/>

  <view class="page-body">
    <view class="page-section">
      <view class="weui-cells__title">姓名</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" auto-focus  id="name" bindchange="bindChange" value="{{name}}"/>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="weui-cells__title">所属公司</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" value="{{company}}" id="company" bindchange="bindChange" />
        </view>
      </view>
    </view>
   
   <view class="page-section">
      <view class="weui-cells__title">电话</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" value="{{phone}}" id="phone" bindchange="bindChange"/>
        </view>
      </view>
    </view>
    
    <view class="page-section">
      <view class="weui-cells__title">邮箱</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input"  value="{{email}}" id="email" bindchange="bindChange"/>
        </view>
      </view>
    </view>


  </view>

<view class="button-area" bindtap="bindButtonClick">
<button type="primary" >提交</button>
</view>

</view>

